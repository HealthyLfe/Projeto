<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".adm.fragment.AdmEditarPerfilFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="360dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/edit_idade_adm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="10dp"
                    android:ems="6"
                    android:hint="Idade"
                    android:fontFamily="@font/louisgeorgecafe"
                    android:inputType="number"
                    android:textColor="@color/preto" />


                <EditText
                    android:id="@+id/edit_peso_adm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginRight="10dp"
                    android:ems="6"
                    android:hint="Peso"
                    android:fontFamily="@font/louisgeorgecafe"
                    android:inputType="number"
                    android:textColor="@color/preto" />

                <EditText
                    android:id="@+id/edit_alt_adm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginRight="10dp"
                    android:ems="6"
                    android:hint="Altura"
                    android:fontFamily="@font/louisgeorgecafe"
                    android:inputType="number"
                    android:textColor="@color/preto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/edit_adm_perfil"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="120dp"
                        android:layout_height="42dp"
                        android:text="Salvar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:fontFamily="@font/louisgeorgecafe"
                        android:textColor="@color/preto"
                        android:background="#A3E4D7"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/can_adm_perfil"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="135dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/louisgeorgecafe"
                        android:textColor="@color/preto"
                        android:background="#A3E4D7"
                        android:text="Cancelar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
</FrameLayout>